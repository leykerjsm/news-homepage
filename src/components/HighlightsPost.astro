---
const { imageUrl, num, title, description } = Astro.props;
---

<article>
  <div class="flex gap-6">
    <img src={imageUrl} class="block w-[30%]" alt="" />
    <div class="flex flex-col max-h-[130px] justify-between flex-auto">
      <span class="text-silver text-[32px] font-bold leading-[32px]">{num}</span
      >
      <h3
        class="text-dark-blue font-extrabold text-[18px] leading-[24px] cursor-pointer hover:text-soft-red"
      >
        {title}
      </h3>
      <p class="text-gunmetal">
        {description}
      </p>
    </div>
  </div>
</article>
