---
import NavItem from './NavItem.astro';
const links = ['home', 'new', 'popular', 'trending', 'categories'];
---

<header
  class="relative max-w-[1110px] mx-auto flex justify-between items-center mb-8 md:mb-[55px] sm:flex"
>
  <img src="/images/logo.svg" class="w-auto h-[28px] md:h-[40px]" alt="logo" />

  <nav class="sm:flex">
    <img
      src="/images/icon-menu.svg"
      class="w-auto h-[17px] sm:hidden"
      alt="menu"
      id="menu"
    />

    <ul
      class="hidden text-gunmetal sm:flex gap-[24px] capitalize cursor-pointer"
    >
      {links.map(link => <NavItem linkItem={link} />)}
    </ul>
  </nav>
</header>
